{
  "family": "multiverse-dive",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/multiverse-dive-api:${IMAGE_TAG}",
      "essential": true,
      "cpu": 1024,
      "memory": 2048,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "WORKERS",
          "value": "4"
        },
        {
          "name": "MAX_CONNECTIONS",
          "value": "100"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/database-url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/redis-url"
        },
        {
          "name": "API_SECRET_KEY",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/api-secret-key"
        },
        {
          "name": "STAC_API_KEY",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/stac-api-key"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/multiverse-dive",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "api",
          "awslogs-create-group": "true"
        }
      },
      "dependsOn": [
        {
          "containerName": "worker",
          "condition": "START"
        }
      ]
    },
    {
      "name": "worker",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/multiverse-dive-worker:${IMAGE_TAG}",
      "essential": true,
      "cpu": 1024,
      "memory": 2048,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "WORKER_CONCURRENCY",
          "value": "4"
        },
        {
          "name": "MAX_MEMORY_MB",
          "value": "1800"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/database-url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/redis-url"
        },
        {
          "name": "S3_BUCKET",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/s3-bucket"
        },
        {
          "name": "STAC_API_KEY",
          "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/multiverse-dive/stac-api-key"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "python -c 'import sys; sys.exit(0)'"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/multiverse-dive",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "worker",
          "awslogs-create-group": "true"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "data-cache",
          "containerPath": "/app/cache",
          "readOnly": false
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "data-cache",
      "efsVolumeConfiguration": {
        "fileSystemId": "${EFS_FILE_SYSTEM_ID}",
        "rootDirectory": "/multiverse-dive/cache",
        "transitEncryption": "ENABLED"
      }
    }
  ],
  "tags": [
    {
      "key": "Application",
      "value": "multiverse-dive"
    },
    {
      "key": "Environment",
      "value": "production"
    }
  ]
}
